<div class="movie-banner">
  <h1 class="text-center">My Movie Lists</h1>
</div>
<div class="m-4">
<%= link_to "Add new list", new_list_path %>
</div>
<div class="d-flex m-4">
  <% @lists.each do |list| %>
  <div class="card-category d-flex justify-content-center"
  style="background-image: url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
  <div class="lists p-4">
    <%= link_to list.name, list_path(list) %>
  </div>
  </div>
  <% end %>
</div>
